@import '../../common/index.wxss';

.title {
  display: flex;
  font-size: 28rpx;
  position: relative
}

.title.placeholder {
  border: none !important;
  min-width: 0 !important;
  padding: 0 !important;
  width: 0 !important
}

.table-wrap {
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
  display: flex;
  height: auto
}

.table-container {
  display: flex;
  flex: 1;
  flex-direction: row
}

.left-board {
  background-color: #fff;
  box-shadow: 0 4px 8px 0 rgba(17, 25, 42, .16);
  left: 0;
  position: -webkit-sticky;
  position: sticky;
  z-index: 10
}

.left-board .table-row-title,
.right-board .table-row-title {
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
  color: #999;
  display: flex;
  font-size: 24rpx;
  height: 64rpx;
  width: auto
}

.left-board .table-row-title .title,
.right-board .table-row-title .title {
  align-items: center;
  box-sizing: border-box;
  padding: 0 24rpx
}

.left-board .table-board .row-item .title-board{
  overflow: hidden;
    word-break: break-all;
}


.right-board .table-board .title-board .title .titleLine {
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  padding: 10rpx 24rpx;
  flex-direction: row;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
  width: auto !important;
}
.right-board .table-board .title-board .title .titleLine1 {
  box-sizing: border-box;
  display: flex;
  padding: 10rpx 24rpx 0 24rpx;
  flex-direction: row;
  width: auto !important;
}
.left-board .table-board .title-board .titleLine1 {
  padding: 24rpx 24rpx 0 0rpx;
    width: auto !important;
}
.right-board .table-board .title-board .title .titleLine1 {
  box-sizing: border-box;
  display: flex;
  padding: 10rpx 24rpx 0 24rpx;
  flex-direction: row;
  width: auto !important;
}

.right-board .table-row-title .title {
  border-right: 1rpx solid #eee
}

.right-board .table-row-title .title .sortable-btn {
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-left: 6rpx
}

.right-board .table-row-title .title .sortable-btn .ascend {
  border-bottom: 8rpx solid #b8b8b8;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  display: block;
  height: 0;
  margin-bottom: 4rpx;
  margin-top: 3rpx;
  width: 0
}

.right-board .table-row-title .title .sortable-btn .ascend.active {
  border-bottom: 8rpx solid #3679ff !important
}

.right-board .table-row-title .title .sortable-btn .descend {
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #b8b8b8;
  display: block;
  height: 0;
  width: 0
}

.right-board .table-row-title .title .sortable-btn .descend.active {
  border-top: 8rpx solid #3679ff !important
}

.left-board .order-style-enabled .row:first-child,
.right-board .order-style-enabled .row:first-child {
  background: #f3f7ff !important;
  border-bottom: 1px solid rgba(54, 121, 255, .08) !important;
  color: #3679ff !important
}

.left-board .order-style-enabled .row:nth-child(2),
.right-board .order-style-enabled .row:nth-child(2) {
  background: #f1fafc !important;
  border-bottom: 1px solid rgba(12, 173, 206, .08) !important;
  color: #0cadce !important
}

.left-board .order-style-enabled .row:nth-child(3),
.right-board .order-style-enabled .row:nth-child(3) {
  background: #fffcf7 !important;
  border-bottom: 1px solid rgba(255, 171, 56, .1) !important;
  color: #ffab38 !important
}

.left-board .table-board,
.right-board .table-board {
  color: #333;
  font-size: 28rpx;
  font-weight: 500
}

.left-board .table-board .row,
.right-board .table-board .rightRow {
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
 
}

/* .left-board .table-board .row{
  background-color: #D9EAFF;
} */


.left-board .table-board .row:last-child,
.right-board .table-board .rightRow:last-child {
  border-bottom: none
}

.left-board .table-board .row-item,
.right-board .table-board .row-item {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  padding: 0 0rpx
}

.right-board .table-board .row-item {
  border-right: 1rpx solid #eee
}

.left-board .table-board .row-item .order-board {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  margin-right: 8rpx;
  width: 30rpx
}

.left-board .table-board .row-item .order-board .mina-icon {
  color: #d81e06;
  font-size: 26rpx;
  padding: 0
}

.left-board .table-board .row-item .order-board .circle-area {
  align-items: center;
  background: #a4b2cf;
  border-radius: 50%;
  color: #fff;
  display: flex;
  font-size: 10rpx;
  height: 20rpx;
  justify-content: center;
  width: 20rpx
}

.right-board .table-board .row-item .title-board .title {
  align-items: center;
  display: flex;
  flex-direction: column
}

.right-board .table-board .row-item .title-board .title .tooltip {
  color: #3680fe;
  font-size: 20rpx;
  font-weight: 400;
  margin-left: 6rpx
}

.left-board .table-board .row-item .title-board .sub-title {
  color: #666;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx
}

.left-board .table-board .row-item .mina-icon {
  color: #999;
  font-size: 28rpx;
  padding: 0 0 0 10rpx
}

.tooltip-wrap {
  align-items: center;
  display: flex;
  height: 100vh;
  justify-content: center;
  left: 0;
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: 999
}

.tooltip-wrap .tooltip-board {
  background: #333;
  border-radius: 8rpx;
  color: #fff;
  font-size: 26rpx;
  margin-top: -100rpx;
  max-height: 500rpx;
  max-width: 420rpx;
  opacity: .7;
  overflow-y: auto;
  padding: 25rpx 20rpx
}